{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@types/tailwindcss",
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxt/content",
      "vuescroll",
      "nuxt-windicss"
    ]
  },
  "include": [
    "shims/**/*.ts",
    "hooks/**/*.ts",
    "config/**/*.ts",
    "pages/**/*.vue",
    "components/**/*.vue",
    "layouts/**/*.vue",
    "plugins/**/*.js",
    "nuxt.config.js",
    // TypeScript
    "plugins/**/*.ts",
    "types/**/*.ts",
    "nuxt.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "static"
  ]
}